.post-author-date{
   margin: 10rpx 0 20rpx 10rpx;    
}

.post-author{
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.post-date{

    margin-left: 20rpx;
	vertical-align: middle;
	font-size: 26rpx;
	margin-bottom: 20px;

}

.post-title{

   font-size: 34rpx;
   font-weight: 600;
   color: #333;
   margin-bottom: 10px;
   margin-left: 10px;   

}

.post-image{

    margin-left: 16px;
    width: 100%;
	height: 340rpx;
	margin: auto 0;
	margin-bottom: 15rpx;

}

.post-content{

   color: #666;
   font-size: 28rpx;
   margin-bottom: 20rpx;
   margin-left: 20rpx;
   letter-spacing: 2rpx;
   line-height: 40rpx;

}

.post-like{

	font-size: 13px;
	flex-direction: row;
	line-height: 16rpx;
	margin-left: 10px;

}

.post-like-image{

   height: 16px;
   width: 16px;
   margin-right: 8px;
   vertical-align: middle;


}

.post-like-font{

    vertical-align: middle;
	margin-right: 20px;

}